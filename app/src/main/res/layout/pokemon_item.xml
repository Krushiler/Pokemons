<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:id="@+id/pokemonPreviewLayout"
    android:orientation="vertical"
    android:layout_marginHorizontal="5dp"
    android:background="@drawable/pokemon_item_background"
    >
    <TextView
        android:id="@+id/pokemonNameTV"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/pokemonImageView"
        android:layout_gravity="center"
        android:paddingHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:textColor="@color/cardview_dark_background"
            android:text="Information"
            android:id="@+id/pokemonInformationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <ToggleButton
        android:id="@+id/favouriteToggleButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:background="@drawable/button_favourite"
        android:checked="false"
        android:text=""
        android:textOff=""
        android:textOn=""
        />
</LinearLayout>